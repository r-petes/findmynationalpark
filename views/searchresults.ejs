<html lang="en">
<!-- Node Bootstrap documentation adapted to format site from: https://getbootstrap.com/docs/5.2/getting-started/introduction/  -->
   <head>
      <meta charset="UTF-8">
      <meta http-equiv="X-UA-Compatible" content="IE=edge">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <title>plan my climb!</title>
      <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
   </head>
   <body class="text-center">
      <br>
      <h1 style="color:#364b37">find a park</h1>
      <br>
      <nav class="navbar-expand navbar-light bg-light d-flex justify-content-center">
         <ul class="navbar-nav">
            <li class="nav-item">
               <a class="nav-link" href="/">FIND</a>
            </li>
            <li class="nav-item">
               <a class="nav-link" href="/about">ABOUT</a>
            </li>
         </ul>
      </nav>
      <h2 class="text-muted m-5"> SEARCH RESULTS </h2>
      <a class="btn btn-outline-dark m-3" href="/" >Back to search page</a> 
      <p class="mb-5">(Going back to the search page will reset your search!)</p>
      <% for(eachMatch in matches){ %>
      <div class="card row m-5">
         <div class="card-body" style="background-color: #9ba59b;">
            <h4 class="card-title p-3" style="color: white;"><%= matches[eachMatch]["fullName"]%></h4>
            <div class="accordion m-4" id="info">
               <div class="accordion-item">
                  <div class="accordion-header" id="heading1<%=eachMatch%>">
                     <h2 class="mb-0">
                        <button class="accordion-button collapsed" type="button" data-toggle="collapse" data-target="#collapse1<%=eachMatch%>" aria-expanded="false" aria-controls="collapse1<%=eachMatch%>">
                        Description 
                        </button>
                     </h2>
                  </div>
                  <div id="collapse1<%=eachMatch%>" class="collapse" aria-labelledby="heading1<%=eachMatch%>" data-parent="#info">
                     <div class="accordion-body">
                        <%= matches[eachMatch]["description"]%>
                     </div>
                  </div>
               </div>
               <div class="accordion-item">
                  <div class="accordion-header" id="heading2<%=eachMatch%>">
                     <h2 class="mb-0">
                        <button class="accordion-button collapsed" type="button" data-toggle="collapse" data-target="#collapse2<%=eachMatch%>" aria-expanded="false" aria-controls="collapse2<%=eachMatch%>">
                        Directions 
                        </button>
                     </h2>
                  </div>
                  <div id="collapse2<%=eachMatch%>" class="collapse" aria-labelledby="heading2<%=eachMatch%>" data-parent="#info">
                     <div class="accordion-body">
                        <%= matches[eachMatch]["directionsInfo"]%>
                     </div>
                  </div>
               </div>
            </div>
            <a class="btn btn-outline-light m-3" target="_blank" href="<%= matches[eachMatch]["URL"]%>">Visit Park Website</a> 
         </div>
      </div>
      <% }; %>
      <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
      <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.7/dist/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
   </body>
</html>